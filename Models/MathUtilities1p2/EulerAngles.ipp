namespace SamsonMath {

////////////////////////////////////////////////////////////////////////////////
// Procedure:  getRoll
////////////////////////////////////////////////////////////////////////////////

double EulerAngles::getRoll (void) const
{
   return getX ();
}

////////////////////////////////////////////////////////////////////////////////
// Procedure:  setRoll
////////////////////////////////////////////////////////////////////////////////

void EulerAngles::setRoll (const double aRoll)
{
   setX (aRoll);
}

////////////////////////////////////////////////////////////////////////////////
// Procedure:  getPitch
////////////////////////////////////////////////////////////////////////////////

double EulerAngles::getPitch (void) const
{
   return getY ();
}

////////////////////////////////////////////////////////////////////////////////
// Procedure:  setPitch
/////////////////////////////////////////////////////////////////////////////////

void EulerAngles::setPitch (const double aPitch)
{
   setY (aPitch);
}

////////////////////////////////////////////////////////////////////////////////
// Procedure:  getYaw
////////////////////////////////////////////////////////////////////////////////

double EulerAngles::getYaw (void) const
{
   return getZ ();
}

////////////////////////////////////////////////////////////////////////////////
// Procedure:  setYaw
////////////////////////////////////////////////////////////////////////////////

void EulerAngles::setYaw (const double aYaw)
{
  setZ (aYaw);
}

}; // namespace
